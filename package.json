{
  "name": "sherpa-coder",
  "displayName": "Sherpa Coder",
  "description": "Sherpa Coder is a VSCode extension that helps you code faster and more efficiently.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sherpa-coder",
          "title": "Sherpa Coder",
          "icon": "resources/sherpa.svg"
        }
      ]
    },
    "views": {
      "sherpa-coder": [
        {
          "type": "webview",
          "id": "sherpa-coder.welcomeView",
          "name": "Chat",
          "icon": "resources/sherpa.svg"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "sherpa-coder.welcome",
        "title": "Get Started with Sherpa Coder",
        "description": "Let's set up your AI coding assistant",
        "steps": [
          {
            "id": "setup.apikey",
            "title": "Set up your OpenAI API Key",
            "description": "Configure your OpenAI account to start using Sherpa Coder",
            "media": {
              "image": "resources/setup-apikey.png",
              "altText": "OpenAI API key setup"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "postcss": "^8.4.49",
    "rollup": "^4.27.2",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.4.15",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-scroll-area": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@rollup/plugin-json": "^6.1.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "ignore": "^6.0.2",
    "isbinaryfile": "^5.0.4",
    "katex": "^0.16.11",
    "lucide-react": "^0.460.0",
    "openai": "^4.72.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "vscode": "^1.1.37"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "alias": {
    "@/*": "./src/webview/*"
  }
}
